{
  "extends": "@r2-drive/ts-config/r2-drive.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["node"],
    "allowJs": true,
    "jsx": "preserve"
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "../../packages/config/dist/cloudflare-env.d.ts"
    // Uncomment if needed
    // ".next/types/**/*.ts",
  ],
  "exclude": ["node_modules", ".next"]
}
